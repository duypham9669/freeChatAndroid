<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2196F3"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp"

        >

        <Button
            android:id="@+id/btn_themban"
            android:layout_margin="5dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="right"
            android:background="@drawable/plus64x64"

            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lisViewBanbe"
        android:layout_width="match_parent"
        android:layout_height="599dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="0dp"

        >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/lisViewBanbe"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_tinnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tin nhan"
            android:layout_marginEnd="30dp"
            />

        <Button
            android:id="@+id/btn_banbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="#2196F3"
            android:text="ban be" />

        <Button
            android:id="@+id/btn_thongtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="thong tin"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
